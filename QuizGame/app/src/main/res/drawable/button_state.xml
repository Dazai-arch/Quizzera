<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- When button is pressed -->
    <item android:state_pressed="true">
        <ripple android:color="#FFFFFF"> <!-- White ripple when pressed -->
            <item android:drawable="@drawable/ripple_effect"/> <!-- Use the ripple effect when pressed -->
        </ripple>
    </item>

    <!-- Default state -->
    <item>
        <ripple android:color="?android:attr/colorControlHighlight">
            <item android:drawable="@drawable/ripple_effect"/> <!-- Default state with ripple -->
        </ripple>
    </item>
</selector>
